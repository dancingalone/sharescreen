<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tv_iamge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/icon_tv_dongle"
        android:layout_centerVertical="true"
        android:paddingTop="8.0dip"
        android:paddingBottom="6.0dip"
        android:layout_marginLeft="10px"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22px"
        android:paddingLeft="10px"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_iamge"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/link_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10px"
        android:textColor="#2F8BFB"
        android:background="@null"
        android:layout_margin="10px"/>

    <TextView
        android:id="@+id/tv_sshid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:textSize="18px"
        android:layout_toRightOf="@id/tv_name"
        android:layout_toLeftOf="@id/link_state"
        android:textColor="#000000"/>
</RelativeLayout>